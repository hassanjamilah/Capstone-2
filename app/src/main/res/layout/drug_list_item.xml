<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    >

    <android.support.constraint.ConstraintLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_500"


        >

        <ImageView
            android:id="@+id/drugListItem_DrugImage_ImageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/drug_image_desc"
            android:focusable="true"
            android:nextFocusRight="@+id/drugListItem_DrugName_TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@color/green_500" />

        <TextView
            android:id="@+id/drugListItem_DrugName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:focusable="true"
            android:fontFamily="sans-serif-black"
            android:nextFocusLeft="@+id/drugDetailsFragment_imageView"
            android:nextFocusDown="@+id/drugListItem_Desc_TextView"
            android:textColor="@color/bluegray_800"
            android:textSize="18sp"

            app:layout_constraintStart_toEndOf="@+id/drugListItem_DrugImage_ImageView"
            app:layout_constraintTop_toTopOf="@+id/drugListItem_DrugImage_ImageView" />


        <TextView
            android:id="@+id/drugListItem_Desc_TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/bluegray_600"
            app:layout_constraintBottom_toBottomOf="@+id/drugListItem_DrugImage_ImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/drugListItem_DrugImage_ImageView"
            app:layout_constraintTop_toBottomOf="@+id/drugListItem_DrugName_TextView"

            />



    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>